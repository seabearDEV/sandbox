{
	"name": "simple-genesis",
	"version": "1.0.0",
	"description": "A simplified version of project-genesis.",
	"type": "module",
	"main": "dist/app/index.js",
	"scripts": {
		"ts-build": "tsc",
		"ts-watch": "tsc --watch",
		"scss-build": "sass ./src/public/css:./dist/public/css",
		"scss-watch": "sass --watch ./src/public/css:./dist/public/css",
		"prehtml-build": "rm -rf ./dist/public/html && mkdir ./dist/public/html",
		"html-build": "cp -r ./src/public/html ./dist/public & cp ./src/public/index.html ./dist/public",
		"html-watch": "chokidar './src/public/html' './src/public/index.html' -c 'npm run html-build'",
		"prebuild": "rm -rf ./dist",
		"build": "npm run ts-build && npm run scss-build && npm run html-build",
		"predev": "npm run build",
		"dev": "npm run ts-watch & npm run scss-watch & npm run html-watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/seabearDEV/sandbox.git"
	},
	"author": "Kory Hoopes",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/seabearDEV/sandbox/issues"
	},
	"homepage": "https://github.com/seabearDEV/sandbox#readme",
	"devDependencies": {
		"@types/express": "^4.17.20",
		"@types/node": "^20.8.10",
		"chokidar-cli": "^3.0.0",
		"sass": "^1.69.5",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"express": "^4.18.2"
	}
}
