{
	"name": "simple-genesis",
	"version": "1.0.0",
	"description": "A simplified version of project-genesis.",
	"type": "module",
	"main": "dist/app/index.js",
	"scripts": {
		"build-ts": "tsc",
		"build-scss": "sass ./src/public/css:./dist/public/css",
		"build-html": "cp -r ./src/public/html ./dist/public",
		"build-index.html": "cp ./src/public/index.html ./dist/public",
		"prebuild": "rm -rf ./dist",
		"build": "npm run build-ts && npm run build-scss && npm run build-html",
		"postbuild": "npm run build-index.html",
		"predev": "npm run build",
		"dev": "chokidar './src' -c 'npm run build'"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/seabearDEV/sandbox.git"
	},
	"author": "Kory Hoopes",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/seabearDEV/sandbox/issues"
	},
	"homepage": "https://github.com/seabearDEV/sandbox#readme",
	"devDependencies": {
		"@types/express": "^4.17.20",
		"@types/node": "^20.8.10",
		"chokidar-cli": "^3.0.0",
		"sass": "^1.69.5",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"express": "^4.18.2"
	}
}
