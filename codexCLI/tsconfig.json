{
	"compilerOptions": {
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"sourceMap": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./src",
		"paths": {
			"@utils/*": ["utils/*"],
			"@commands/*": ["commands/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
